<div class="container">
<h1 style="text-align: center">New Game</h1>
<ul style="list-style: none; text-align: center" class>
  <% @letters.each do |letter| %>
    <li style="display:inline;"><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post">
  <input type="text" placeholder="What is your word?">
  <input type="submit">
</form>
</div>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
